generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  type       Int
  isActive   Boolean
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Planet {
  id          String   @id @default(uuid())
  name        String
  description String
  surfaceArea Float
  sunDistance Float
  durationDay Float
  gravity     Float
  isActive    Boolean  @default(true)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}
